<div class="row">
    <h3 class="center-align">{{article.headline}}</h3>
</div>

<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Comment on this Article:</h5>
        <div class="row">
            <div class="input-field-text">
                <input type="text" placeholder="Name" name="name">
            </div>

            <div class="input-field-text">
                <input type="text" placeholder="Comment" name="comment">
            </div>

        </div>
        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button grey darken-3" type="submit" value="Submit" id="commentID"></center>
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comments:</h5>
        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}:</p>
            <hr>
            <p>{{body}}<p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}

    </div>
</div>